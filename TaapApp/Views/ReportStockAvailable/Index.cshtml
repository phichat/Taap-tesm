@model IEnumerable<TaapApp.Models.PartReceive>
@{
    ViewData["Title"] = "Sotck Available | Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="form" content="@ViewBag.MetaForm" />

<style>
    th.md {
        min-width: 350px;
    }

    th.sm {
        min-width: 150px;
    }

    th.xs {
        min-width: 75px;
    }
</style>

@section Scripts {
    <script src="@Url.Content("~/js/views/reports/report-stock-available.js")"></script>
}

<h2>Report Stock Available</h2>
<hr />

<form id="search">
    <div class="row">
        <label class="col-md-2 col-form-label" for="receiveNo">Receive No :</label>
        <div class="col-md-3 form-group">
            <select id="" name="receiveNo" class="form-control form-control-sm" placeholder="Choose receiveNo" required>
                <option disabled="" selected></option>
                @foreach (var item in ViewBag.SelectOptionReceiveNo)
                {
                    <option value=@item.Value>@item.Text</option>
                }
            </select>
            <span for="receiveNo" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <button type="button" class="btn btn-info btn-sm form-control" 
                    onclick="search('#search')"
                    data-permission="viewer">
                <i class="icon-magnifier"></i>
                Search
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">Export :</div>
        <div class="col-md-2 form-group">
            <button type="button" class="btn btn-danger btn-sm form-control" 
                    onclick="exportPDF('#search')"
                    data-permission="printer">
                <i class="fa fa-file-pdf-o"></i>
                Pdf
            </button>
        </div>
        <div class="col-md-2 form-group">
            <button type="button" class="btn btn-success btn-sm form-control" 
                    onclick="exportExcel('#search')"
                    data-permission="printer">
                <i class="fa fa-file-excel-o"></i>
                Excel
            </button>
        </div>
    </div>
</form>

