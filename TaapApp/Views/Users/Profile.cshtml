@model TaapApp.Models.UsersViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="form" content="any" />
<h2>Profile</h2>
<div>
    <hr />
    <form asp-action="Profile">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId" />

        <div class="row">
            <label asp-for="UserName" class="col-md-2 control-label"></label>
            <span class="star-required">*</span>
            <div class="col-md-3 form-group">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <label asp-for="Password" class="col-md-2 control-label"></label>
            <span class="star-required">*</span>
            <div class="col-md-3 form-group">
                <input asp-for="Password" type="password" class="form-control" value=@Model.Password />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <span class="star-required">*</span>
            <div class="col-md-3 form-group">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <label asp-for="LastName" class="col-md-2 control-label"></label>
            <span style="color:transparent;">*</span>
            <div class="col-md-3 form-group">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <span style="color: transparent;">*</span>
            <div class="col-md-3 form-group">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <label asp-for="RoleName" class="col-md-2 control-label">Role</label>
            <div class="col-md-3 form-group">
                @Html.DisplayFor(model => model.RoleName)
            </div>
        </div>

        <input asp-for="UpdateBy" type="hidden" />

        <div class="row form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-info">
                    <i class="fa fa-save"></i> Save
                </button>
            </div>
        </div>

        <script>
            window.onload = function () {
                var acct = localStorage.getItem('access_token')
                var decode = parseJwt(acct);
                $('input[name=UpdateBy]').val(decode.UserId);
            };
        </script>
    </form>
</div>
