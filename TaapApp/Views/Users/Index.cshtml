@model IEnumerable<TaapApp.Models.UsersViewModel>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="form" content="@ViewBag.MetaForm" />


<style>
    a {
        text-decoration: none;
    }

        a:hover {
            text-decoration: none;
        }

    .social-box {
        min-height: unset;
        margin-bottom: unset;
        text-align: center;
        background: #fff;
        border: none;
    }

    .card-group > .card {
        margin-bottom: unset !important;
        border: none;
    }

        .card-group > .card:first-child {
            text-align: center;
        }

        .card-group > .card:last-child {
            border-left: 1px solid #c2cfd6;
        }
</style>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="h2 text-muted mb-3">
                    <i class="icon-people"></i> &nbsp; List Users
                </div>

                <hr class="mt-0">

                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <p>
                                <a asp-action="Create">
                                    <i class="icon-plus icons font-2xl" style="position: relative; top: 5px;"></i>&nbsp; Create New
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <form id="search" method="get" asp-action="Search">
                                <div class="row">
                                    <label class="col-md-3 col-sm-12 col-form-label" for="">Search :</label>
                                    <div class="col-md-8 col-sm-12 form-group">
                                        <input type="text" name="key" class="form-control form-control-sm" />
                                        <span for="receiveNo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 col-sm-12"></div>
                                    <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                                        <button id="btn-search" type="submit" class="btn btn-info btn-sm form-control">
                                            <i class="icon-magnifier"></i>
                                            Search
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastLoginDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.CreateBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastLoginDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CreateBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateDate)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
